
/**
 * @file Firebase Security Rules for Firestore.
 * @description This ruleset enforces a strict user-ownership model for user profiles, images, and notes,
 *              with an additional admin role and specific rules for the Stripe Payments extension.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- STRIPE EXTENSION RULES ---
    // Allow read access to a user's own customer data
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      // Allow write access to checkout_sessions for the user
      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      // Allow read access to a user's own subscriptions
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      // Allow read access to a user's own payments
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    // --- Product and pricing information ---
    // Public read access is allowed for products and prices, but writing is disabled
    match /products/{id} {
      allow read: if true;
      allow write: if false;

      match /prices/{id} {
        allow read: if true;
        allow write: if false;
      }
      
      match /tax_rates/{id} {
        allow read: if true;
        allow write: if false;
      }
    }

    // --- USER DATA RULES ---
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isOwner(userId); // Simplified for Stripe webhook updates
      allow delete: if isExistingOwner(userId);

      match /images/{imageId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /notes/{noteId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /galleries/{galleryId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }
      
      match /audits/{auditId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /brandProfiles/{brandProfileId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /scheduledPosts/{postId} {
        allow read, write: if isOwner(userId) && request.resource.data.userId == userId;
        allow delete: if isOwner(userId);
      }
    }
    
    // --- ADMIN ROLE ---
    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
    

    