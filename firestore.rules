
/**
 * @file Firebase Security Rules for Firestore.
 * @description This ruleset enforces a strict user-ownership model for user profiles, images, and notes,
 *              with an additional admin role based on document existence in a dedicated collection.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information; only the user can read/write their own profile.
 * - /users/{userId}/images/{imageId}: Stores image metadata; only the user can read/write images they own.
 * - /users/{userId}/notes/{noteId}: Stores notes; only the user can read/write their own notes.
 * - /users/{userId}/galleries/{galleryId}: Stores user-created galleries; only the user can manage their own galleries.
 * - /customers/{userId}: Stores Stripe customer data; only the user can manage their own payment info.
 * - /roles_admin/{adminId}: Presence of a document grants admin privileges.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      match /images/{imageId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /notes/{noteId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /galleries/{galleryId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }
    }
    
    /**
     * @description Defines access rules for Stripe customer documents and related subcollections.
     *              This allows the Stripe Firebase Extension to work correctly.
     *              The service role (used by the extension) bypasses these client-side rules,
     *              but we are making them explicit for clarity and to solve potential permission issues.
     */
    match /customers/{userId} {
      // The user can read and write their own customer data.
      // The extension will also write to this document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      /**
       * @description Allows a user to create and read checkout sessions for themselves.
       *              The Stripe extension will then update this document with an `url` or an `error`.
       *              Reading is important for the client to get the redirection URL.
       */
      match /checkout_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

       /**
       * @description Allows a user to read their own payment history.
       *              The extension writes to this collection after a successful payment.
       */
      match /payments/{paymentId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // IMPORTANT: Only the extension can write payment info.
      }
    }

    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
