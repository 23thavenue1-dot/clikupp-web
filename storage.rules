rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Règle explicite pour les images des posts planifiés
    // L'utilisateur connecté peut lire et écrire uniquement ses propres fichiers.
    match /scheduledPosts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Règle pour les images des utilisateurs et les avatars
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
