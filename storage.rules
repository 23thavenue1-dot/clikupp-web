rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Autoriser la lecture et la suppression uniquement par le propriétaire du fichier
    match /uploads/{uid}/{fileId} {
      allow read, delete: if request.auth != null && request.auth.uid == uid;

      // Autoriser l'écriture si l'utilisateur est authentifié, est le propriétaire,
      // et que le fichier fait moins de 10 Mo.
      allow write: if request.auth != null && request.auth.uid == uid
                   && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
