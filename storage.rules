rules_version = '2';

/**
 * @name Règles de sécurité pour Firebase Storage
 * @description Ces règles garantissent que seuls les utilisateurs authentifiés peuvent lire
 * et écrire des fichiers dans leur propre dossier personnel.
 */
service firebase.storage {
  match /b/{bucket}/o {

    /**
     * @description Fichiers d'un utilisateur individuel.
     * Le chemin contient l'ID de l'utilisateur pour garantir la propriété.
     * - Seul le propriétaire peut lire, écrire et supprimer ses fichiers.
     * - La taille du fichier est limitée à 5 Mo.
     */
    match /uploads/{userId}/{allPaths=**} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Limite de 5 Mo par fichier
                   && request.resource.contentType.matches('image/.*'); // Accepte uniquement les images
    }
  }
}
