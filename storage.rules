rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Règle principale pour le dossier "users" (galerie principale)
    match /users/{userId}/{allPaths=**} {
      allow read: if true; 
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Règle pour les photos de profil (avatars)
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règle pour les images des posts programmés
    match /scheduledPosts/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
