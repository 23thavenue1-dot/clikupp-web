
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Règle unifiée pour tous les dossiers utilisateurs.
    // L'utilisateur doit être authentifié et son UID doit correspondre au {userId} dans le chemin.
    match /{folder}/{userId}/{allPaths=**} {
      allow read: if true; // Souvent, on veut que les images soient publiquement lisibles.
      allow write: if request.auth != null && request.auth.uid == userId
                    && (folder == 'users' || folder == 'avatars' || folder == 'scheduledPosts');
    }
  }
}
