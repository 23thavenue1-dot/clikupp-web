rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Règle pour les images de galerie
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Tout le monde peut lire les images
      allow write: if request.auth != null && request.auth.uid == userId; // Seul le propriétaire peut écrire
    }

    // Règle pour les photos de profil (avatars)
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Tout le monde peut voir les avatars
      
      // Seul le propriétaire peut écrire (changer son avatar).
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // NOUVELLE RÈGLE : Règle pour les images des posts programmés
    match /scheduledPosts/{userId}/{fileName} {
        // Seul le propriétaire peut lire et écrire ses images de posts programmés.
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
