rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Les utilisateurs peuvent uniquement écrire dans leur propre dossier "uploads".
    // Le nom du fichier est vérifié par le /{fileName}
    match /uploads/{userId}/{fileName} {
      // Autorise l'écriture (upload) si l'utilisateur est authentifié
      // et que son ID correspond au {userId} dans le chemin.
      allow write: if request.auth != null && request.auth.uid == userId;

      // Autorise la lecture (téléchargement) si l'utilisateur est le propriétaire.
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
